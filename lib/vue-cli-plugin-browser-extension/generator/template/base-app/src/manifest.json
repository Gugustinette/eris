{
  "manifest_version": 2,
  "name": "__MSG_extName__",
  "homepage_url": "http://localhost:8080/",
  "description": "A Vue Browser Extension",
  "default_locale": "en",
  "permissions": [
    <%_ if (options.components.contentScripts) { -%>
    "activeTab",
    <%_ } -%>
    "<all_urls>",
    "*://*/*"
  ],
  "icons": {
    "16": "icons/16.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  <%_ if (options.components.background) { -%>
  },
  "background": {
    "scripts": [
      "js/background.js"
    ],
    "persistent": false
  <%_ } -%>
  },
  <%_ if (options.components.devtools) { -%>
  "devtools_page": "devtools.html",
  <%_ } -%>
  "browser_action": {
    <%_ if (options.components.popup) { -%>
    "default_popup": "popup.html",
    <%_ } -%>
    "default_title": "__MSG_extName__",
    "default_icon": {
      "19": "icons/19.png",
      "38": "icons/38.png"
    }
  <%_ if (options.components.options) { -%>
  },
  "options_ui": {
    "page": "options.html",
    "browser_style": true
  <%_ } -%>
  <%_ if (options.components.override) { -%>
  },
  "chrome_url_overrides": {
    "<%- options.components.overrideOption || 'newtab' %>": "override.html"
  <%_ } -%>
  }
}
